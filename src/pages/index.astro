---
import Layout from "../layouts/Layout.astro";
import sql from "../lib/db";
import type { Formation } from "../types";
import FormationGrid from "../components/FormationGrid";
import { dbDateToUtc } from "../utils/dates";

let formations: Formation[] = [];
let errorMsg = "";

try {
  const rawFormations = await sql`
    SELECT 
      id, asunto, entidad, descripcion, enlace, oculta,
      fecha_inicio::text as fecha_inicio,
      fecha_fin::text as fecha_fin
    FROM formaciones 
    ORDER BY fecha_inicio DESC
  `;

  formations = rawFormations.map((f) => ({
    ...(f as Formation),
    fecha_inicio: dbDateToUtc(f.fecha_inicio),
    fecha_fin: dbDateToUtc(f.fecha_fin),
  }));
} catch (error) {
  console.error("Error fetching formations:", error);
  errorMsg = error instanceof Error ? error.message : String(error);
}
---

<Layout>
  <div class="mx-auto max-w-[1200px] px-4 py-10">
    {
      errorMsg ? (
        <div
          class="mb-6 rounded-xl border border-red-200 bg-red-50 p-4 text-red-800 shadow-sm"
          role="alert"
        >
          <div class="flex gap-3">
            <svg
              class="h-5 w-5 flex-shrink-0 text-red-500"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                clip-rule="evenodd"
              />
            </svg>
            <div>
              <h3 class="text-sm font-semibold">Error al cargar formaciones</h3>
              <p class="mt-1 text-sm">{errorMsg}</p>
            </div>
          </div>
        </div>
      ) : (
        <FormationGrid client:load initialFormations={formations} />
      )
    }
  </div>
</Layout>
